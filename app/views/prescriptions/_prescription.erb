<div class="row">
  <div class="col-sm-offset-2 col-sm-8 well">
    <div class="inline">
      Patient: <%= link_to prescription.patient.last_name + ', ' + prescription.patient.first_name + ' (' + prescription.patient.insurance_number + ')', patient_path(prescription.patient) %><br />
      Prescribed by: <%= link_to prescription.physician.last_name + ', ' + prescription.physician.first_name + ' (' + prescription.physician.permit_number + ')', physician_path(prescription.physician) %><br />
      Last updated: <%= time_ago_in_words(prescription.updated_at) %> ago - Emitted: <%= time_ago_in_words(prescription.created_at) %> ago<br />
    </div>
    <div class="inline pull-right">
      <%= link_to physician_prescription_path(prescription.physician, prescription), class: "btn btn-success" do %>
        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
      <% end %>
      <%= link_to edit_physician_prescription_path(prescription.physician, prescription), class: "btn btn-warning" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
    </div>
  </div>
</div>