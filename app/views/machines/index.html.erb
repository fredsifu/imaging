<%= render 'shared/page_title', title: 'Machines' %>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'Register new machine', new_machine_path, class: 'btn btn-success' %>
  </div>
</div>

<br />

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @machines.each do |machine| %>
  <div class="row">
    <div class="col-lg-12 well">
      <h4><%= link_to machine.readable_name, machine_path(machine) %></h4>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 center">
    <%= will_paginate %>
  </div>
</div>