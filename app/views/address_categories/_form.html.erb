<%= render "shared/errors", obj: @address_category %>

<div class="row">
  <div class="well col-sm-8 col-sm-offset-2">
    <%= form_for @address_category, html: { class: 'form-horizontal' } do |f| %>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :name, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, { class: 'form-control', :autofocus => true } %>
        </div>
      </div>
      <%= f.submit(@address_category.new_record? ? "Create Address Category":"Update Address Category", class: "btn btn-success") %>
    <% end %>
  </div>
</div>