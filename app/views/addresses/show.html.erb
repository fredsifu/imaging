<div class="row">
  <div class="well col-sm-8 col-sm-offset-2">
    <div class="col-sm-11">
      <div class="address_category"><%= @address_category.name %></div>
      <div>
        <%= @address.line1 %><br />
        <% if !@address.line2.blank? %><%= @address.line2 %><br /><% end %>
        <%= @address.city %>, <%= @address.region %>, <%= @address.country_name %><br />
        <%= @address.zipcode %>
      </div>
    </div>
    <div class="col-sm-1">
      <%= link_to edit_address_path(@address), class: "btn btn-warning" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
    </div>
  </div>
</div>