<%= render "shared/errors", obj: @address %>

<div class="row">
  <div class="well col-sm-8 col-sm-offset-2">
    <%= form_for [@addressable, @address], html: { class: 'form-horizontal' } do |f| %>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_line1">Address Line 1</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :line1, { class: 'form-control', placeholder: 'Street address, P.O. Box, c/o', :autofocus => true } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_line2">Address Line 2</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :line2, { class: 'form-control', placeholder: 'Apartment, suite, unit, building, floor, etc.' } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_country_code">Country</label>
        </div>
        <div class="col-sm-8">
          <%= f.country_select :country_code, { include_blank: 'Select a country', priority_countries: ["CA", "US", "FR"] }, { class: 'form-control', data: { attribute: "value" } } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_region">State / Region / Province</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :region, class: 'form-control' %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_city">City / Town</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <label class="control-label" for="address_zipcode">Postal Code / Zipcode</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :zipcode, class: 'form-control' %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :category, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :category, AddressCategory.all, :id, :name, { include_blank: true }, { class: 'form-control', data: { attribute: "value" } } %>
        </div>
      </div>
      <%= f.submit(@address.new_record? ? "Create Address":"Update Address", class: "btn btn-success") %>
    <% end %>
  </div>
</div>
