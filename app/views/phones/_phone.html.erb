<div class="row phone">
  <div class="col-xs-9">
    <div class="phone_category"><%= phone.category_name %></div>
    <div><%= phone.number %></div>
  </div>
  <div class="col-xs-3 right no_wrap">
    <%= link_to polymorphic_path([:edit, phonable, phone]), class: "btn btn-warning" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to polymorphic_path([phonable, phone]), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </div>
</div>