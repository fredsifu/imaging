<%= render "shared/errors", obj: @physician %>

<div class="row">
  <div class="well col-sm-8 col-sm-offset-2">
    <%= form_for @physician, html: { class: 'form-horizontal' } do |f| %>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :first_name, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :first_name, { class: 'form-control', :autofocus => true } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :last_name, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :last_name, { class: 'form-control' } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :middle_name, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :middle_name, { class: 'form-control' } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :gender, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.select :gender, options_for_select([['Female','F'],['Male','M']], @physician.gender), {}, { class: 'form-control' } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :permit_number, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :permit_number, { class: 'form-control' } %>
        </div>
      </div>
      <div class="control-group">
        <div class="col-sm-4">
          <%= f.label :specialty_ids, { class: 'control-label' } %>
        </div>
        <div class="col-sm-8">
          <%= f.select :specialty_ids, @specialties.collect {|s| [s.name, s.id]}, {}, { :multiple => true, class: "form-control" } %>
          <p>(Hold CTRL or CMD and click for several specialties)</p>
        </div>
      </div>
      <%= f.submit(@physician.new_record? ? "Create Physician Profile":"Update Physician Profile", class: "btn btn-success") %>
    <% end %>
  </div>
</div>